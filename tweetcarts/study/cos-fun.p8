pico-8 cartridge // http://www.pico-8.com
version 33
__lua__
-- https://twitter.com/theoremnd/status/1312158415519588352

pal(13,135,1)
::_::
cls(1)

-- slow time down a bit
n=t()/4

-- o == colour mod
o=0
for h=-8,152,48 do
	for i=0,128,2 do
		j=cos(n+i/150)*12
		k=cos(.5+n+i/150)*12
		l=cos(n-i/75)*12
		m=cos(.5+n-i/75)*12
		a=h+j+l
		b=h+k+l
		line(i,a,i,b,12+o%3)
		d=h+k+m+24
		q=h+j+m+24
		line(i+1,q,i+1,d,12+(o+1)%3)
	end
	o+=2
end

flip()goto _
