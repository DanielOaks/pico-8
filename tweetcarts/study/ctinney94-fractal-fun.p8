-- https://twitter.com/ctinney94/status/1343628200765698051

-- draw one of the recursive triangle things!
function r(x,y,a,c)
	a+=0.25+o
	w=x+sin(.5+a+o)*8*c
	z=y+cos(.5+a+o)*8*c
	if(c<4) then
		line(x,y,w,z,11-c)
	end
	if c>1 then
		for i=-1,1 do
			r(w,z,a+i/3,c-1)
		end
	end
end

-- start rendering loop
::★::

-- dither out 400 pixels on the screen
for i=0,400 do
	-- pico-8 screen memory space starts at
	--  0x6000 - or 24576, and goes for 8k (8192)
	--  bytes. this selects a random pixel on the
	--  screen
	i=24576+rnd(8192)
	
	-- set the pixel to whatever its current
	--  value is divided by 8, this fades the
	--  pixel out slowly.
	-- because each byte contains two pixels,
	--  this helps create that interesting-looking
	--  dithering pattern. strange and fun!
	poke(i,peek(i)/8)
end

o=t()/25

-- draw 6 of these rotating-tri things
for i=0,5 do
	r(64,64,i/5,4)
end

goto ★
