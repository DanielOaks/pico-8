st=t()

twalk_depth=6
twalk_yh=10
twalk_spread=70
twalk_offsety=60

cls(0)
circfill(64,547,470,1)

for y=0,twalk_depth do
	for x=0,13 do
		xp = (x*10+st*10) % 130
		uv=(xp-64)/64
		bx=xp+uv*(y/twalk_depth)*twalk_spread
		by=twalk_offsety+y*twalk_yh+((twalk_depth-y)^2)/2
		by-=abs(sin(st+y*.3+x*.15)*5.9*y/5)-abs(uv)*3
		tsize = 2+(y/2)*2.4
		trifill(bx-tsize,by,bx+tsize,by,bx,by-tsize*2,7+y)
	end
end

print(stat(1),1,1,7)

