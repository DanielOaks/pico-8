pico-8 cartridge // http://www.pico-8.com
version 16
__lua__

local scount=100
local s1,s2,s3={},{},{}

function _init()
		ship.x = 10
		ship.wantedx = 130
		ship.y = 10
		ship.wantedy = 80

		for i=0,scount do
				s1[i] = {}
		 	s1[i].x = rnd(256)
		 	s1[i].y = rnd(128)

				s2[i] = {}
		 	s2[i].x = rnd(256)
		 	s2[i].y = rnd(128)

				s3[i] = {}
		 	s3[i].x = rnd(256)
		 	s3[i].y = rnd(128)
		end
end

function _update()
  -- _update() is required for game loop 
end
 
function _draw()
		cls()

		-- draw background stars
		for i=0,#s1 do
				pset(s3[i].x, s3[i].y, 5)
				s3[i].x -= 0.7
				if (s3[i].x < 0) then
						s3[i].x = 256
				end
				
				pset(s2[i].x, s2[i].y, 6)
				s2[i].x -= 1
				if (s2[i].x < 0) then
						s2[i].x = 256
				end
		end
		
		-- draw foreground stars
		for i=0,#s1 do				
				pset(s1[i].x, s1[i].y, 7)
				s1[i].x -= 1.3
				if (s1[i].x < 0) then
						s1[i].x = 256
				end
		end
		
		map()
end


