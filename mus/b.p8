pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
music(1)

local phase=0
local intro={}

local scount=100
local s1,s2,s3={},{},{}

local ship={}

function _init()
  intro.sweep = 1.8
  intro.col = 14
  intro.colchng = 0
  intro.colsweep = 5
		intro.x = 0
		
		ship.x = 10
		ship.wantedx = 130
		ship.y = 10
		ship.wantedy = 80

		for i=0,scount do
				s1[i] = {}
		 	s1[i].x = rnd(256)
		 	s1[i].y = rnd(128)

				s2[i] = {}
		 	s2[i].x = rnd(256)
		 	s2[i].y = rnd(128)

				s3[i] = {}
		 	s3[i].x = rnd(256)
		 	s3[i].y = rnd(128)
		end
end

function _update()
		if (btn(0)) then
 			ship.x -= 1.2;
  end
		if (btn(1)) then
 			ship.x += 1.2;
  end
  ship.x = mid(-8, ship.x, 128)

		if (btn(2)) then
 			ship.y -= 1.2;
  end
		if (btn(3)) then
 			ship.y += 1.2;
  end
  ship.y = mid(-8, ship.y, 128)
end
 
function _draw()
		if (phase == 0) then
				intro.x+=intro.sweep
				if (128 <= intro.x) then
						phase = 1
						music(0)
						return
				end
				
				for x=-intro.sweep, 1 do
  				for y=0, 128 do
  						pset(intro.x+x, y, rnd(16))
  				end
  		end
  		
  		rectfill(34, 56, 94, 70, 0)
  		rect(35, 57, 93, 69, intro.col)
  		print("loading...", 47, 61, 7)
  		
  		intro.colchng += 1
  		if (intro.colchng == intro.colsweep) then
  				intro.colchng = 0
    		intro.col -= 1
    		if (intro.col == 11) then
    				intro.col = 14
    		end
    end
  		
				return
		end

		cls()

		-- draw background stars
		for i=0,#s1 do
				pset(s3[i].x, s3[i].y, 5)
				s3[i].x -= 0.7
				if (s3[i].x < 0) then
						s3[i].x = 256
				end
				
				pset(s2[i].x, s2[i].y, 6)
				s2[i].x -= 1
				if (s2[i].x < 0) then
						s2[i].x = 256
				end
		end
		
		-- draw spaceship
		spr(1, ship.x, ship.y)
		
		-- draw foreground stars
		for i=0,#s1 do				
				pset(s1[i].x, s1[i].y, 7)
				s1[i].x -= 1.3
				if (s1[i].x < 0) then
						s1[i].x = 256
				end
		end
end
